<h1>Articles Listing Page </h1>

<table>
  <tr>
    <th>Title </th>
    <th>Description</th>
    <th>Actions </th>
  </tr>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to "Show", article_path(article), method: :show %></td>
      <td><%= link_to "Delete", article_path(article), data: {
        turbo_method: :delete
      } %></td>
      <td><%= link_to "Edit",  edit_article_path(article), method: :edit %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "Create new article", new_article_path %>
</p> 
